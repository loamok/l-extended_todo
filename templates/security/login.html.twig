{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block pagescripts %}
    {% if error %}
        <script type="text/javascript">
            $(document).ready(function(){
                dissmissAlert();
                showAlert('danger', "{{ error.messageKey|trans(error.messageData, 'security') }}", 'login-error');
            });
        </script>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="login-form">
        <form method="post">
            <h2 class="text-center mb-3">Please Log in</h2>       
            {% if not app.user %}
            <div class="form-group mb-3">
                <input id="inputEmail" type="email" value="{{ last_username }}" name="email" class="form-control login-form-element" 
                    placeholder="Email" required autofocus autocomplete="off"
                >
            </div>
            <div class="form-group mb-3">
                <input type="password" name="password" id="inputPassword" class="form-control login-form-element" 
                placeholder="Password" required="required" autocomplete="off" >
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
            {% endif %}
            <div class="clearfix mb-3">
                {% if app.user %}
                    Logged as {{ app.user.username }}, <a href="{{ path('app_logout') }}" class="float-right">Logout</a>
                {% else %}
                    <label class="float-left form-check-label"><input type="checkbox" id="remember_me" name="_remember_me" checked/>&nbsp;Remember me</label>
                    <a href="{{ path('app_forgot_password_request') }}" class="float-right">Forgoted my pass</a>
                {% endif %}
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
        <p class="text-center mb-3"><a href="#">Register</a></p>
    </div>
{% endblock %}
